sql {
    dialect = "mysql"
    driver = "rlm_sql_${dialect}"
    server = "mysql"
    port = 3306
    login = "${env:MYSQL_USER}"
    password = "${env:MYSQL_PASSWORD}"
    radius_db = "${env:MYSQL_DATABASE}"
    read_clients = yes
    client_table = "nas"

    # Connection pool settings
    pool {
        start = 5
        min = 4
        max = 32
        spare = 3
        uses = 0
        lifetime = 0
        idle_timeout = 60
    }

    # Include the default queries for MySQL
    $INCLUDE ${modconfdir}/${.:name}/main/${dialect}/queries.conf
}
