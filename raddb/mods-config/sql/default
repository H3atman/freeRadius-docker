    client_table = "nas"

    # Enable accounting and authentication SQL
    accounting = yes
    authentication = yes

    # Connection settings
    reconnect = yes
    retry_delay = 60

    # SQL query files location (use defaults or customize if needed)
    # These usually refer to radcheck, radreply, radacct, etc. SQL queries
    # You can customize paths if you place sql files differently
}
