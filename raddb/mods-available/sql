cat > raddb/mods-available/sql << 'EOF'
sql {
    driver = "rlm_sql_mysql"
    dialect = "mysql"
    
    # Connection info:
    server = "mysql"
    port = 3306
    login = "${MYSQL_USER:radius}"
    password = "${MYSQL_PASSWORD:radius_password}"
    radius_db = "${MYSQL_DATABASE:radius}"
    
    # Optional for debugging
    # sql_debug = true
    
    $INCLUDE ${modconfdir}/sql/main/${dialect}/queries.conf
}
EOF
